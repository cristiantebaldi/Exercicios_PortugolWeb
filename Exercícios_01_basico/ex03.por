programa {
  funcao inicio() {
    /*Calcular Média*/
    real num1, num2, num3, num4

    escreva("Digite o 1º número: ")
    leia(num1)
    escreva("Digite o 2º número: ")
    leia(num2)
    escreva("Digite o 3º número: ")
    leia(num3)
    escreva("Digite o 4º número: ")
    leia(num4)
    
    escreva("A média entre: ", num1, ", ", num2, ", ", num3, " e ", num4, " é: ", (num1+num2+num3+num4)/4)

  }
}
